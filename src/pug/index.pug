extends ./include/_layout
block var
  - metas = {}
  - metas.title = 'team-portfolio'
  - metas.url = '/'
  - metas.imgpath = '../images/top/'
  - metas.site_name = 'site_name'
  - metas.description = 'description'
  - metas.keywords = 'keywords'
block append meta
  +meta(metas)
  include ./include/_inc_meta_facebook
  +inc_meta_facebook(metas)
block title
  title #{metas.title}
block body
  main.top
    .josei_warp
      .josei
          img(src=metas.imgpath + "top_hair.jpg" alt="女性の画像")
      .top_comment
        h2 TOYO FOR
          br
          |ALWAYS
          br
          |BE YOURSELF.

    .news_warp
      .news 
        h4 News
        ul.news_list 
          li
            p.days 2202.01.01
            p.news_comment ２０２２年もよろしくお願いします。
      .news_link
        p: a(href="") View more

    .concept_wrap
      h3.title Concept

      .concept_box
        .moji.hogehoge
          .concept_comment
            p あなたらしさに寄り添い
              br
              |あなたの魅力を引き出す。
            .concept_link
              p: a(href="") View more
        .images.hogehoge
          img(src=metas.imgpath + "cut_image.jpg", alt="カットイメージ画像")
    
      .menu_box
        .moji.hogehoge
          .concept_comment
            h4 Menu
            p あなたに合わせたメニューで、
              br
              |毎日が輝くようなスタイル創りを。
            .concept_link
              p: a(href="") View more
